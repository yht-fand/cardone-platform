<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="dataSourceParent" class="com.alibaba.druid.pool.DruidDataSource" init-method="init" destroy-method="close"
          abstract="true">
        <property name="timeBetweenLogStatsMillis" value="300000"/>
        <property name="proxyFilters">
            <list>
                <bean class="com.alibaba.druid.filter.stat.StatFilter">
                    <property name="slowSqlMillis" value="3000"/>
                    <property name="logSlowSql" value="true"/>
                    <property name="mergeSql" value="true"/>
                </bean>
            </list>
        </property>
        <property name="initialSize" value="0"/>
        <property name="maxWait" value="45000"/>
        <property name="timeBetweenEvictionRunsMillis" value="60000"/>
        <property name="minEvictableIdleTimeMillis" value="300000"/>
        <property name="validationQuery" value="SELECT 'x' FROM DUAL"/>
        <property name="testWhileIdle" value="true"/>
        <property name="testOnBorrow" value="false"/>
        <property name="testOnReturn" value="false"/>
        <property name="poolPreparedStatements" value="true"/>
        <property name="sharePreparedStatements" value="true"/>
        <property name="maxOpenPreparedStatements" value="10"/>
        <property name="removeAbandoned" value="true"/>
        <property name="logAbandoned" value="true"/>
        <property name="defaultReadOnly" value="false"/>
        <property name="defaultAutoCommit" value="true"/>
        <property name="defaultTransactionIsolation" value="2"/>
    </bean>

    <bean id="top.cardone.dataSource.rw1_a" parent="dataSourceParent">
        <property name="name" value="rw1_a"/>
        <property name="url" value="${dataSource.rw1_a.url}"/>
        <property name="username" value="${dataSource.rw1_a.user}"/>
        <property name="password" value="${dataSource.rw1_a.password}"/>
        <property name="maxActive" value="${dataSource.rw1_a.maxActive}"/>
        <property name="minIdle" value="${dataSource.rw1_a.minIdle}"/>
        <property name="removeAbandonedTimeout" value="${dataSource.rw1_a.removeAbandonedTimeout}"/>
        <property name="maxOpenPreparedStatements" value="${dataSource.rw1_a.maxOpenPreparedStatements}"/>
    </bean>

    <bean id="top.cardone.dataSource.r1_a" parent="dataSourceParent">
        <property name="name" value="r1_a"/>
        <property name="url" value="${dataSource.r1_a.url}"/>
        <property name="username" value="${dataSource.r1_a.user}"/>
        <property name="password" value="${dataSource.r1_a.password}"/>
        <property name="maxActive" value="${dataSource.r1_a.maxActive}"/>
        <property name="minIdle" value="${dataSource.r1_a.minIdle}"/>
        <property name="removeAbandonedTimeout" value="${dataSource.r1_a.removeAbandonedTimeout}"/>
        <property name="maxOpenPreparedStatements" value="${dataSource.r1_a.maxOpenPreparedStatements}"/>
        <property name="defaultReadOnly" value="true"/>
        <property name="defaultAutoCommit" value="false"/>
    </bean>

    <bean id="top.cardone.data.jdbc.datasource.looku.RoutingDataSource"
          class="top.cardone.data.jdbc.datasource.looku.DefaultRoutingDataSource">
        <property name="targetDataSources">
            <map key-type="java.lang.String">
                <entry key="r1_a" value-ref="top.cardone.dataSource.r1_a"></entry>
            </map>
        </property>
        <property name="defaultTargetDataSource" ref="top.cardone.dataSource.rw1_a"/>
    </bean>

    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="top.cardone.data.jdbc.datasource.looku.RoutingDataSource"/>
    </bean>

    <bean name="org.springframework.jdbc.core.namedparam.NamedParameterJdbcOperations"
          class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
        <constructor-arg ref="top.cardone.data.jdbc.datasource.looku.RoutingDataSource"></constructor-arg>
    </bean>

    <bean name="org.springframework.jdbc.core.JdbcOperations"
          class="org.springframework.jdbc.core.JdbcTemplate">
        <constructor-arg ref="top.cardone.data.jdbc.datasource.looku.RoutingDataSource"></constructor-arg>
    </bean>

    <bean id="org.springframework.jdbc.support.lob.LobHandler"
          class="org.springframework.jdbc.support.lob.DefaultLobHandler"/>

    <bean id="parseSqlFunc" class="top.cardone.data.func.DefaultSqlParseFunc"/>

    <bean id="top.cardone.data.jdbc.support.JdbcOperationsSupport"
          class="top.cardone.data.jdbc.support.DefaultJdbcOperationsSupport"/>

    <bean id="top.cardone.data.jdbc.support.NamedParameterJdbcOperationsSupport"
          class="top.cardone.data.jdbc.support.DefaultNamedParameterJdbcOperationsSupport"/>
</beans>