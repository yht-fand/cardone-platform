<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true">
    <!-- 组织 -->
    <bean id="top.cardone.usercenter.dao.OrgDao"
          class="top.cardone.usercenter.dao.impl.OrgDaoImpl">
        <property name="configTable">
            <map>
                <entry key="config">
                    <map>
                        <entry key="sqlFileRoot" value="/cardone/usercenter/org/"/>
                        <entry key="pks" value="orgId"/>
                        <entry key="codes" value="orgId"/>
                    </map>
                </entry>
                <entry key="insert">
                    <map>
                        <entry key="orgId" value="getRandomUUIDFunc"/>
                        <entry key="creator" value="getLoginUserIdFunc"/>
                        <entry key="createDate" value="getNowDateFunc"/>
                    </map>
                </entry>
                <entry key="update">
                    <map>
                        <entry key="modifier" value="getLoginUserIdFunc"/>
                        <entry key="modifyDate" value="getNowDateFunc"/>
                    </map>
                </entry>
            </map>
        </property>
    </bean>

    <!-- 组织 -->
    <bean id="top.cardone.usercenter.service.OrgService"
          class="top.cardone.usercenter.service.impl.OrgServiceImpl">
        <property name="dao" ref="top.cardone.usercenter.dao.OrgDao"/>
    </bean>

    <bean parent="messageListenerContainerParnet">
        <property name="messageListener">
            <bean  parent="exceptionParnet">
                <property name="serviceInterface" value="top.cardone.usercenter.service.OrgService"/>
                <property name="service" ref="top.cardone.usercenter.service.OrgService"/>
            </bean>
        </property>
        <property name="destination">
            <bean class="org.apache.activemq.command.ActiveMQQueue">
                <constructor-arg value="top.cardone.usercenter.service.OrgService"/>
            </bean>
        </property>
    </bean>
</beans>