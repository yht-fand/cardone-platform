<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true">
    <!-- 开放用户 -->
    <bean id="top.cardone.usercenter.dao.OpenUserDao"
          class="top.cardone.usercenter.dao.impl.OpenUserDaoImpl">
        <property name="configTable">
            <map>
                <entry key="config">
                    <map>
                        <entry key="sqlFileRoot" value="/cardone/usercenter/openUser/"/>
                        <entry key="pks" value="openUserId"/>
                        <entry key="codes" value="openUserId"/>
                    </map>
                </entry>
                <entry key="insert">
                    <map>
                        <entry key="openUserId" value="getRandomUUIDFunc"/>
                        <entry key="createdByCode" value="readCreatedByCodeFunc"/>
                        <entry key="createdDate" value="readCreatedDateFunc"/>
                    </map>
                </entry>
                <entry key="update">
                    <map>
                        <entry key="lastModifiedByCode" value="readLastModifiedByCodeFunc"/>
                        <entry key="lastModifiedDate" value="readLastModifiedDateFunc"/>
                    </map>
                </entry>
            </map>
        </property>
    </bean>

    <!-- 开放用户 -->
    <bean id="top.cardone.usercenter.service.OpenUserService"
          class="top.cardone.usercenter.service.impl.OpenUserServiceImpl">
        <property name="dao" ref="top.cardone.usercenter.dao.OpenUserDao"/>
    </bean>

    <bean parent="messageListenerContainerParnet">
        <property name="messageListener">
            <bean  parent="exceptionParnet">
                <property name="serviceInterface" value="top.cardone.usercenter.service.OpenUserService"/>
                <property name="service" ref="top.cardone.usercenter.service.OpenUserService"/>
            </bean>
        </property>
        <property name="destination">
            <bean class="org.apache.activemq.command.ActiveMQQueue">
                <constructor-arg value="cardone-usercenter-${cardone-usercenter-version}:top.cardone.usercenter.service.OpenUserService"/>
            </bean>
        </property>
    </bean>
</beans>